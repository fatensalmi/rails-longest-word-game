<h1>New Game</h1>
<% @letters.each do |letter| %>
  <%= letter %>
<% end %>


 <form action='/score' method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label>What is the longest word you can find ?</label>
    <br>
    <input type="text" name="word" type="hidden">
    <input id="letters" name="letters" type="hidden" value=<%@letters%>/>
    <input type="submit" value="Play">
    </form>

<%= link_to "Play again", '/new' %>
